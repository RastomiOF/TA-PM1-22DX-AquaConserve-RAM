<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IkanFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/jdl_content1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="FISH"
            android:textAlignment="center"
            android:textColor="@color/BlueSea"
            android:textSize="38dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/frm_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/eksplorasi_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jdl_content1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_fish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fish"
                    android:layout_margin="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fish_ikan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fish / Ikan"
                    android:textSize="16dp"
                    android:textStyle="bold|italic"
                    android:background="@color/white"
                    android:layout_margin="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_fish" />

                <TextView
                    android:id="@+id/cnt_fish"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:text="Indonesia, sebagai negara kepulauan terbesar di dunia, memiliki keanekaragaman hayati laut yang luar biasa, termasuk ikan. Berikut adalah beberapa fakta tentang ikan di Indonesia :"
                    android:textColor="@color/white"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fish_ikan" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="Keanekaragaman Spesies: Indonesia memiliki sekitar 8.500 spesies ikan, yang menjadikannya salah satu negara dengan keanekaragaman ikan laut terbesar di dunia."
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_margin="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cnt_fish" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="Industri Perikanan: Perikanan adalah salah satu sektor penting dalam perekonomian Indonesia. Banyak masyarakat pesisir yang bergantung pada penangkapan ikan sebagai sumber mata pencaharian utama."
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_margin="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>