<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment3">

    <!-- ConstraintLayout yang mengatur seluruh layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ImageView background -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="910dp"
            android:src="@drawable/eksplorasi_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintWidth_default="wrap" />

        <!-- TextView title -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoblack"
            android:text="Education"
            android:textColor="@color/white"
            android:textSize="43dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintMarginTop="34dp"
            app:layout_constraintMarginStart="16dp" />

        <!-- ImageView coat of arms -->
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="155dp"
            android:layout_height="102dp"
            android:src="@drawable/coat_of_arms_of_the_people_s_representative_council_of_indonesia"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintMarginTop="20dp"
            app:layout_constraintMarginStart="16dp" />

        <!-- TextView untuk UU No. 32 -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UU NO. 32, LN 2014/NO. 294, TLN. NO. 5603, LL SETNEG"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintMarginTop="20dp"
            app:layout_constraintMarginStart="16dp" />

        <!-- TextView untuk judul undang-undang -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNDANG-UNDANG TENTANG KELAUTAN"
            android:textColor="@color/white"
            android:textSize="11dp"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintMarginTop="4dp"
            app:layout_constraintMarginStart="16dp" />

        <!-- TextView untuk deskripsi undang-undang -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pengelolaan sumber daya kelautan dilakukan melalui sebuah kerangka hukum untuk memberikan kepastian hukum dan manfaat bagi seluruh masyarakat sebagai negara kepulauan yang berciri nusantara, dengan membentuk Undang-Undang tentang Kelautan."
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="20dp"
            app:layout_constraintMarginStart="16dp"
            app:layout_constraintMarginEnd="16dp" />

        <!-- TextView untuk dasar hukum -->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dasar hukum Undang-Undang ini adalah : Pasal 20, Pasal 22D ayat (1), Pasal 25A, dan Pasal 33 ayat (3) Undang-Undang Dasar Negara Republik Indonesia Tahun 1945."
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="20dp"
            app:layout_constraintMarginStart="16dp"
            app:layout_constraintMarginEnd="16dp" />

        <!-- TextView untuk isi undang-undang -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dalam undang-undang ini diatur tentang : Ruang lingkup, wilayah laut; pembangunan kelautan; pengelolaan kelautan; pengembangan kelautan; pengelolaan ruang laut dan pelindungan lingkungan laut; pertahanan, keamanan, penegakan hukum, dan keselamatan di laut; Tata kelola dan kelembagaan laut; dan peran serta masyarakat."
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginTop="20dp"
            app:layout_constraintMarginStart="16dp"
            app:layout_constraintMarginEnd="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
