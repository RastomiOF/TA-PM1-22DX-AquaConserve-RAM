<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KudaLautFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/jdl_content4"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="SEAHORSES"
            android:textAlignment="center"
            android:textColor="@color/BlueSea"
            android:textSize="38dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/eksplorasi_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jdl_content4">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/seahorses"
                    android:layout_margin="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/seahorses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SeaHorses / Kuda Laut"
                    android:textSize="16dp"
                    android:textStyle="bold|italic"
                    android:background="@color/white"
                    android:layout_margin="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:id="@+id/cnt_kl"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Kuda laut, atau yang dikenal juga sebagai Hippocampus, adalah ikan kecil yang terkenal dengan bentuk tubuhnya yang unik dan menarik. Di Indonesia, kuda laut dapat ditemukan di berbagai perairan, terutama di terumbu karang dan padang lamun. Berikut adalah beberapa fakta menarik tentang kuda laut di Indonesia :"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/seahorses" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_margin="10dp"
                    android:text="Keanekaragaman Spesies: Indonesia merupakan salah satu negara dengan keanekaragaman hayati laut yang tinggi, termasuk berbagai spesies kuda laut. Beberapa spesies kuda laut yang umum di Indonesia antara lain Hippocampus kuda (kuda laut kuda), Hippocampus barbouri (kuda laut berduri), dan Hippocampus spinosissimus (kuda laut berduri halus)."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cnt_kl" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Habitat: Kuda laut biasanya hidup di perairan dangkal, terutama di sekitar terumbu karang, padang lamun, dan hutan bakau. Mereka cenderung lebih suka lingkungan yang memiliki banyak tempat berlindung dan aliran air yang tenang."
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView11" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>